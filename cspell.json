{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": "./project-words.txt",
            "addWords": true
        }
    ],
    "dictionaries": ["project-words"],
    "ignorePaths": ["/project-words.txt"],
    "files": ["(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md)", "!**/templates/**/*"],
    "useGitignore": true,
    "enableGlobDot": true,
    "cache": {
        "useCache": true
    }
}
